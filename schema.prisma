// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
  }
  
  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }
  
  model User {
    id   String @unique @default(uuid())
    name String
    Age  Int?
    role Role
    post Post[]
  }
  
  enum Role {
    ADMIN
    USER
  }
  
  model Post {
    id       String  @unique @default(uuid())
    title    String
    content  String
    comments String?
    User     User?   @relation(fields: [userId], references: [id])
    userId   String?
  }